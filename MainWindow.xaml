<Window x:Class="BotwTrainer.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
        Title="BOTW Trainer" Height="700" Width="800" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="15"></RowDefinition>
        </Grid.RowDefinitions>

        <Canvas Grid.Row="0" Margin="0">
            <TextBox x:Name="IpAddress" HorizontalAlignment="Left" Height="21" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100" Canvas.Left="14" Canvas.Top="13"/>
            <Button x:Name="Connect" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="ConnectClick" Canvas.Left="148" Canvas.Top="13" />
            <Button x:Name="Disconnect" Content="Disconnect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Click="DisconnectClick" IsEnabled="False" Canvas.Left="255" Canvas.Top="13"/>
        </Canvas>

        <TabControl x:Name="TabControl" HorizontalAlignment="Left" Height="530" Margin="0" VerticalAlignment="Top" IsEnabled="False" Grid.Row="1" SelectedIndex="0" Width="760">

            <TabItem Header="Weapons" x:Name="Weapons" Margin="0,0,0,0">
                <StackPanel>
                    <Label x:Name="Continue" Content="Click Load to continue" Visibility="Hidden"></Label>
                </StackPanel>
            </TabItem>

            <TabItem Header="Bows and Arrows" x:Name="BowsArrows" Margin="0,0,0,0" />

            <TabItem Header="Shields" x:Name="Shields" Margin="0,0,0,0" />

            <TabItem Header="Armour" x:Name="Armour" Margin="0,0,0,0" />

            <TabItem Header="Materials" x:Name="Materials" Margin="0,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="MaterialsContent" Margin="0" />
            </TabItem>

            <TabItem Header="Food" x:Name="Food" Margin="0,0,0,0" />

            <TabItem Header="Key Items" x:Name="KeyItems" Margin="0,0,0,0" />

            <TabItem Header="Codes" x:Name="Other" Margin="0,0,0,0">
                <Canvas>
                    <Label Content="Current address/values printed to the right." Height="25" Margin="0" Canvas.Left="50" Canvas.Top="24"/>

                    <Label Content="Stamina" Height="23" Margin="0" Canvas.Left="50" Canvas.Top="54"/>
                    <CheckBox x:Name="Stamina" Margin="0" Canvas.Left="160" Canvas.Top="60"/>
                    <TextBox x:Name="CurrentStamina" Height="25" Width="90" Margin="0" Canvas.Left="200" Canvas.Top="54"></TextBox>
                    <Label x:Name="StaminaData" Content="StaminaData" Height="25" Margin="0" Canvas.Left="315" Canvas.Top="54"/>

                    <Label Content="Health (Max 78)" Height="23" Margin="0" Canvas.Left="50" Canvas.Top="84"/>
                    <CheckBox x:Name="Health" Margin="0" Canvas.Left="160" Canvas.Top="90" />
                    <TextBox x:Name="CurrentHealth" Height="25" Width="30" Margin="0" Canvas.Left="200" Canvas.Top="84" PreviewTextInput="NumberValidationTextBox"></TextBox>
                    <Label x:Name="HealthData" Content="HealthData" Height="25" Margin="0" Canvas.Left="315" Canvas.Top="84"/>

                    <Label Content="Rupees" Height="25" Margin="0" Canvas.Left="50" Canvas.Top="114"></Label>
                    <CheckBox x:Name="Rupees" Margin="0" Canvas.Left="160" Canvas.Top="120" />
                    <TextBox x:Name="CurrentRupees" Height="25" Width="90" Margin="0" Canvas.Left="200" Canvas.Top="115" PreviewTextInput="NumberValidationTextBox"></TextBox>
                    <Label x:Name="RupeeData" Content="RupeeData" Height="25" Margin="0" Canvas.Left="315" Canvas.Top="115"/>

                    <Label Content="Always Run" Height="23" Margin="0" Canvas.Left="50" Canvas.Top="144"></Label>
                    <CheckBox x:Name="Run" Margin="0" Canvas.Left="160" Canvas.Top="150" />
                    <Label x:Name="RunData" Content="RunData" Height="25" Margin="0" Canvas.Left="280" Canvas.Top="144" Visibility="Hidden"/>

                    <Label Content="Moon Jump" Height="25" Canvas.Left="50" Canvas.Top="174"></Label>
                    <CheckBox x:Name="MoonJump" Margin="0" Canvas.Left="160" Canvas.Top="180" />

                    <Label Content="Weapon Slots" Height="25" Margin="0" Canvas.Left="50" Canvas.Top="204"></Label>
                    <CheckBox x:Name="WeaponSlots" Margin="0" Canvas.Left="160" Canvas.Top="210" />
                    <TextBox x:Name="CurrentWeaponSlots" Height="25" Width="30" Margin="0" Canvas.Left="200" Canvas.Top="205" PreviewTextInput="NumberValidationTextBox"/>
                    <Label x:Name="WeaponSlotsData" Content="WeaponSlotsData" Height="25" Margin="0" Canvas.Left="315" Canvas.Top="205"/>

                    <Label Content="Bow Slots" Height="25" Margin="0" Canvas.Left="50" Canvas.Top="234"/>
                    <CheckBox x:Name="BowSlots" Margin="0" Canvas.Left="160" Canvas.Top="240" />
                    <TextBox x:Name="CurrentBowSlots" Height="25" Width="30" Margin="0" Canvas.Left="200" Canvas.Top="235" PreviewTextInput="NumberValidationTextBox"/>
                    <Label x:Name="BowSlotsData" Content="BowSlotsData" Height="25" Margin="0" Canvas.Left="315" Canvas.Top="235"/>

                    <Label Content="Shield Slots" Height="25" Margin="0" Canvas.Left="50" Canvas.Top="264"/>
                    <CheckBox x:Name="ShieldSlots" Margin="0" Canvas.Left="160" Canvas.Top="270" />
                    <TextBox x:Name="CurrentShieldSlots" Height="25" Width="30" Margin="0" Canvas.Left="200" Canvas.Top="265" PreviewTextInput="NumberValidationTextBox"/>
                    <Label x:Name="ShieldSlotsData" Content="ShieldSlotsData" Height="25" Margin="0" Canvas.Left="315" Canvas.Top="265"/>
                </Canvas>
            </TabItem>

            <TabItem Header="Debug" x:Name="Debug" Margin="0,0,0,0">
                <WrapPanel Margin="0">

                    <Label x:Name="DebugIntro" Content="test" Margin="0,0,0,0" Height="30" Width="400"></Label>

                    <DataGrid x:Name="DebugGrid" AutoGenerateColumns="False" Margin="0,10,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="100" Binding="{Binding Name}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Address" Width="100" Binding="{Binding AddressHex, Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Page" Width="50" Binding="{Binding Page}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Unknown" Width="50" Binding="{Binding Unknown}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Value" Width="100" Binding="{Binding Value}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Equipped" Width="50" Binding="{Binding EquippedHex, Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Mod Amount" Width="100" Binding="{Binding ModAmountHex, Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Mod Type" Width="100" Binding="{Binding ModTypeHex, Mode=OneWay}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                </WrapPanel>
            </TabItem>

            <TabItem Header="Credits" Margin="0">
                <StackPanel>
                    <Label Content="Bully"></Label>
                    <Label Content="Cosmo"></Label>
                    <Label Content="5pmeternal"></Label>
                    <Label Content="AcedArmy"></Label>
                    <Label Content="DarkFlare69"></Label>
                    <Label Content="ItchyOwned"></Label>
                    <Label Content="Shinzuya"></Label>
                    <Label Content="PandaOnSmack"></Label>
                </StackPanel>
            </TabItem>

        </TabControl>

        <Canvas Grid.Row="2" Margin="0">
            <Button x:Name="Load" Content="Load" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75" Click="LoadClick" Canvas.Left="4" Canvas.Top="8" IsEnabled="False" />

            <Button x:Name="Save" Content="Save" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75" Click="SaveClick" Canvas.Left="109" Canvas.Top="8" IsEnabled="False" />
        </Canvas>

        <ProgressBar Height="15" Name="Progress" Grid.Row="3" Foreground="#FF138127" />
    </Grid>
</Window>